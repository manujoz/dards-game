{
    "name": "dards-game",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev --turbopack",
        "build": "next build",
        "build:netlify": "pnpm prisma:generate && pnpm prisma:migrate:deploy && pnpm build",
        "start": "next start",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "prisma:generate": "sh -c 'set -a; [ -f ./.env.local ] && . ./.env.local; set +a; prisma generate'",
        "prisma:migrate:deploy": "sh -c 'set -a; [ -f ./.env.local ] && . ./.env.local; set +a; prisma migrate deploy'",
        "prisma:migrate:dev": "sh -c 'set -a; [ -f ./.env.local ] && . ./.env.local; set +a; prisma migrate dev'",
        "prisma:seed": "sh -c 'set -a; [ -f ./.env.local ] && . ./.env.local; set +a; prisma db seed'",
        "postinstall": "prisma generate",
        "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
        "docker:build": "docker-compose -f docker-compose.dev.yml build",
        "docker:down": "docker-compose -f docker-compose.dev.yml down",
        "docker:reset": "docker-compose -f docker-compose.dev.yml down -v && docker-compose -f docker-compose.dev.yml up --build",
        "test": "vitest run"
    },
    "dependencies": {
        "@prisma/client": "^5.22.0",
        "@radix-ui/react-dialog": "^1.1.2",
        "@radix-ui/react-slot": "^1.1.0",
        "canvas-confetti": "^1.9.4",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "date-fns": "^4.1.0",
        "decimal.js": "^10.4.3",
        "lucide-react": "^0.468.0",
        "next": "16.1.1",
        "next-intl": "^3.26.0",
        "react": "19.2.3",
        "react-dom": "19.2.3",
        "tailwind-merge": "^2.5.5",
        "tailwindcss-animate": "^1.0.7",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@netlify/plugin-nextjs": "^5.0.0",
        "@eslint/eslintrc": "^3.3.3",
        "@eslint/js": "^9.39.2",
        "@types/canvas-confetti": "^1.9.0",
        "@types/node": "^20.17.6",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "autoprefixer": "^10.4.23",
        "eslint": "^9.39.2",
        "eslint-config-next": "16.1.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "postcss": "^8.4.49",
        "prettier": "^3.7.4",
        "prisma": "^5.22.0",
        "tailwindcss": "^3.4.15",
        "tsx": "^4.19.2",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.52.0",
        "vitest": "^2.1.5"
    },
    "prisma": {
        "seed": "tsx prisma/seed.ts"
    }
}
